---
import SectionHeader from '@/components/SectionHeader.astro';
---
<section class="w-full mb-24">
    <SectionHeader 
        title="CONTACT US"
        subtitle="Let's be <strong> In Touch!</strong>"
    />
    <div class="w-9/12 grid grid-cols-3 gap-5 mx-auto">
        <div class="col-span-1 flex justify-center flex-col text-center">
            <a href="#" target="_blank">
                <svg class="mx-auto mb-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#D3012C" stroke-linecap="round" stroke-linejoin="round" width="45" height="45" stroke-width="2"> 
                    <path d="M9 11a3 3 0 1 0 6 0a3 3 0 0 0 -6 0"></path> 
                    <path d="M17.657 16.657l-4.243 4.243a2 2 0 0 1 -2.827 0l-4.244 -4.243a8 8 0 1 1 11.314 0z"></path> 
                </svg> 
                <p class="text-2xl mb-2"><strong>location</strong></p>
                <p>XXXX 00, 00000, XXXXXXXXXX</p>
            </a>
        </div>
        <div class="col-span-1 flex justify-center flex-col text-center">
            <a href="#" target="_blank">
                <svg class="mx-auto mb-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#D3012C" stroke-linecap="round" stroke-linejoin="round" width="45" height="45" stroke-width="2"> 
                    <path d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2"></path> 
                </svg> 
                <p class="text-2xl mb-2"><strong>call us</strong></p>
                <p>+34 666 555 444</p>
            </a>
        </div>
        <div class="col-span-1 flex justify-center flex-col text-center">
            <a href="#" target="_blank">
                <svg class="mx-auto mb-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="#D3012C" stroke-linecap="round" stroke-linejoin="round" width="45" height="45" stroke-width="2"> 
                    <path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"></path> 
                    <path d="M3 7l9 6l9 -6"></path> 
                </svg> 
                <p class="text-2xl mb-2"><strong>email</strong></p>
                <p>xxxx@xxxxxxxx.xxx</p>
            </a>
        </div>
    </div>
</section>