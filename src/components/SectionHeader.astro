---
interface Props{
    title: string
    subtitle?: string
}

const { title, subtitle } = Astro.props
---
<header class="flex flex-col mx-auto justify-center items-center">
    <h3 class="font-overpass text-2xl border-b-2 border-primary mb-5">
        {title}
    </h3>
    {subtitle && <p class="font-worksans text-5xl mb-16" set:html={subtitle}></p>}
</header>